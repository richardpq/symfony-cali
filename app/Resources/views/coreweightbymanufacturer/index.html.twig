{% extends 'RichardPQAdminBundle:layout:crud.index.html.twig' %}

{% block content_header_title %}Core Weight By Manufacturer{% endblock %}
{% block content_header_title_small %}List{% endblock %}

{% block content_header_breadcrumb %}Administration{% endblock %}
{% block content_header_breadcrumb_2lv %}Core Weight{% endblock %}
{% block breadcrumb_icon 'tasks' %}
{% block pageId 'coreweight' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of Core Weight By Manufacturer</h3>
                    <a class="btn btn-success pull-right" href="{{ path('core-weight-manufacturer_new') }}" >New Core Weight</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="main-table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Manufacturer</th>
                            <th>Roll Width</th>
                            <th>Weight</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>

                                <td class="element-description">{{ entity.manufacturer }}</td>
                                <td class="element-description">{{ entity.rollWidth }}</td>
                                <td class="element-description">{{ entity.weight }}</td>
                                <td>
                                    {% embed 'RichardPQAdminBundle:widgets:action.buttons.widget.html.twig' with {'entity_route_prefix':'core-weight-manufacturer', 'entity': entity} %}
                                    {% endembed %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}