{% extends 'RichardPQAdminBundle:layout:crud.index.html.twig' %}

{% block content_header_title %}Film {{ film }}{% endblock %}
{% block content_header_title_small %}Details{% endblock %}

{% block content_header_breadcrumb %}Administration{% endblock %}
{% block content_header_breadcrumb_2lv %}Film{% endblock %}
{% block breadcrumb_icon 'tasks' %}
{% block pageId 'film' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Film Details</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Manufacturer</dt>
                        <dd>{{ film.manufacturer }}</dd>
                        <dt>Film Type</dt>
                        <dd>{{ film.filmType }}</dd>
                        <dt>Discontinued</dt>
                        <dd>{{ film.discontinued ? 'YES' : 'NO' }}</dd>
                        <dt>Actual Sq. Ft. Price</dt>
                        <dd>{{ film.actualSquareFeetPrice | localizedcurrency('USD') }} </dd>
                        <dt>Actual French P. Price</dt>
                        <dd>{{ film.actualFrenchPanePrice | localizedcurrency('USD') }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Price History</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="main-table" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Sq. Ft. Price</th>
                            <th>French P. Price</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for priceInfo in film.filmPrices %}
                            <tr>

                                <td>{{ priceInfo.sqftPrice | localizedcurrency('USD') }}</td>
                                <td>{{ priceInfo.frenchPanesPrice | localizedcurrency('USD') }}</td>
                                <td>{{ priceInfo.startDate | date('m/d/Y')}}</td>
                                <td>{{ priceInfo.endDate ? priceInfo.endDate | date('m/d/Y') : '' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}